{
   "manifest_version": 2,
   "name": "Amazon Untracker",
   "version": "0.1",
   "content_scripts": [ {
      "matches": [ "https://www.amazon.com/*", "http://www.amazon.com/*", "http://www.amazon.in/*", "https://www.amazon.in/*" ],
      "js": [ "sanitize.js" ],
      "all_frames": true
   } ],
   "description": "Clean up all URLs on Amazon website of tracking params",
   "icons": {
      "128": "amazon-thumb.png"
   }
}
